/* pages/movieItem/index.wxss */
.detail-panel{
  position: relative;
  height: 380rpx;
  overflow: hidden;
}
.panel-bg{
  width: 100%;
  height: 100%;
  filter: blur(25rpx);
  z-index: -1;
  position: absolute;
  opacity: .8;
}
.mask{
  z-index: -2;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #999;
}

.movie-content{
  display: flex;
  height: 100%;
}

.movie-content .image{
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.image image{
  width: 80%;
}
.content{
  width: 60%;
  padding-top: 50rpx;
  font-weight: bold;
}
.movie-title{
  font-size: 18px;
  color: #fff;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.douban-average{
  margin-left: 20rpx;
  font-size: 12px;
  color: #fc0;
}

.movie-like{
  margin-top: 25rpx;
  font-size: 12px;
  color: #fff;
}
.count{
  color: #fc0;
  font-weight: bold;
}

.movie-tags, .movie-durations, .movie-pubdates{
  font-size: 12px;
  color: #fff;
  margin-top: 15rpx;
}

.movie-descript{
  background-color: #f5f5f5;
}
.movie-summary{
  background-color: #fff;
  padding: 40rpx 30rpx 0;
  color: #555;
  font-size: 12px;
  line-height: 40rpx;
}
.movie-summary .down{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 15rpx 0;
  padding: 5rpx 0;
  border-top: 1px solid #f0f0f0;
}

.movie-summary .down text{
  font-weight: bold;
  transform: rotate(90deg);
  color: grey;
  font-size: 16px;
  text-align: center;
}
.movie-summary.open .down text{
  transform: rotate(-90deg);
}

.summary{
  max-height: 150rpx;
  overflow: hidden;
  transition: max-height .25s;
}

.movie-summary.open .summary{
  max-height: 10000rpx;
}

.casts, .preview{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 15rpx 20rpx;
}

.actor-list{
  font-weight: bold;
  font-size: 16px;
  /*padding: 10rpx 0;*/
}

.actor-detail{
  
}

.actor{
  display: inline-block;
  width: 150rpx;
  margin-top: 20rpx;
}

.pre-video{
  display: inline-block;
  width: 210rpx;
  margin-top: 20rpx;
  position: relative;
}
.pic{
  position: relative;
}

.playicon{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 70rpx;
  height: 70rpx;
  transform: translate(-50%, -50%);
}

.actor-pic{
  width: 130rpx;
  height: 180rpx;
  margin: 0 auto;
  display: block;
}
.pic{
  width: 200rpx;
  height: 155rpx;
  margin: 0 auto;
  display: block;
}

.actor-name-en, .actor-name{
  font-size: 10px;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.video-mask{
  position: fixed;
  height: 100vh;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: #010101;
}