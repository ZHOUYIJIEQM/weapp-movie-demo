/* pages/more/index.wxss */
page, .container{
  height: 100%;
  
}

.container{
  background-color: #f5f5f5;
}

.search{
  border: 1px solid transparent;
}
.inner{
  margin: 20rpx 30rpx;
  padding: 15rpx 90rpx 15rpx 15rpx;
  background-color: #fff;
  position: relative;
}
.input-placeholder{
  color: #999;
}
.search-img{
  position: absolute;
  right: 0;
  padding: 10rpx 25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
}
.user{
  background-color: #ff6600;
  padding: 100rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
}

.userinfo-avatar{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  border: 2px solid #fff;
}

.userinfo-nikcname{
  padding-top: 15rpx;
  color: #fff;
}

.login{
  width: 200rpx;
  background-color: #fff;
  border-radius: 100rpx;
  /*font-weight: bold;*/
  color: #555;
}

.mini-pro-info{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx 0 200rpx;
}