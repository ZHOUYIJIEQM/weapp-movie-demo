/* pages/videoItem/index.wxss */
.video-play, .full-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000;
}

.video-play video{
  position: relative;
  width: 100%;
}

.mask{
  background-color: rgba(0, 0, 0, 0.6);
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
}

video{
  z-index: 10;
}

.video-play video .prev{
  width: 100%;
  height: 100%;
}

.play{
  width: 250rpx;
  height: 250rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.close{
  width: 50rpx;
  height: 50rpx;
  padding: 50rpx;
  z-index: 10;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}